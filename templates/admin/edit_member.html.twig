{% extends 'base.html.twig' %}

{% block title %}Editer Membre - G.C.S FC{% endblock %}

{% block body %}
<div class="row mb-3">
    <div class="col-md-6">
        <h1>Editer le Membre : {{ member.user.name }}</h1>
    </div>
    <div class="col-md-6 text-end">
        <a href="{{ path('app_admin_members') }}" class="btn btn-light me-2">
            <i class="fa fa-backward"></i> Retour à la liste
        </a>
    </div>
</div>

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow-sm">
            <div class="card-header bg-dark text-white">
                <h5 class="mb-0">Détails du membre</h5>
            </div>
            <div class="card-body">
                {{ form_start(form) }}
                    <div class="row">
                        <div class="col-md-6">
                            {{ form_row(form.telephone, { 'attr': {'class': 'form-control mb-3'} }) }}
                        </div>
                        <div class="col-md-6">
                            {{ form_row(form.categorie, { 'attr': {'class': 'form-control mb-3'} }) }}
                        </div>
                    </div>
                    <div class="mb-3">
                        {{ form_row(form.statut, { 'attr': {'class': 'form-select mb-3'} }) }}
                    </div>
                    <div class="text-end">
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="fa fa-save"></i> Enregistrer les modifications
                        </button>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}
