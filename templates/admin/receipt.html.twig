<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Reçu de Paiement #{{ payment.id }}</title>
        <link rel="icon" href="https://cdn-icons-png.flaticon.com/512/33/33736.png">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
        <link rel="stylesheet" href="{{ asset('css/style.css') }}">
        <style>
            body {
                background-color: #f8f9fa;
                min-height: 100vh;
                display: flex;
                flex-direction: column;
            }
            .receipt-container {
                flex: 1;
                display: flex;
                flex-direction: column;
                justify-content: center;
                padding: 2rem 0;
            }
            @media print {
                @page { margin: 0; }
                body {
                    background-color: white !important;
                    display: block;
                }
                .no-print {
                    display: none !important;
                }
                .receipt-card {
                    box-shadow: none !important;
                    border: 1px solid #ddd !important;
                    width: 100% !important;
                    max-width: 100% !important;
                    margin: 0 !important;
                }
                .container {
                    width: 100% !important;
                    max-width: 100% !important;
                    padding: 0 !important;
                }
                /* Ensure background colors are printed */
                .card-header, .bg-light, .badge {
                    -webkit-print-color-adjust: exact !important;
                    print-color-adjust: exact !important;
                }
            }
        </style>
    </head>
    <body>
        <div class="receipt-container">
            <!-- Navigation and Actions -->
            <div class="container mb-4 no-print">
                <div class="row">
                    <div class="col-12">
                        <a href="{{ path('app_admin_payments') }}" class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-left"></i> Retour à la liste
                        </a>
                        <button onclick="window.print()" class="btn btn-primary float-end">
                            <i class="fas fa-print"></i> Imprimer le reçu
                        </button>
                    </div>
                </div>
            </div>

            <div class="container d-flex justify-content-center">
                <div class="card shadow-lg border-0 receipt-card" style="width: 100%; max-width: 700px;">
                    <!-- Header -->
                    <div class="card-header bg-primary text-white text-center py-4">
                        <h2 class="mb-0 fw-bold"><i class="fas fa-futbol me-2"></i> G.C.S FC</h2>
                        <p class="mb-0 opacity-75 letter-spacing-1">REÇU DE PAIEMENT</p>
                    </div>

                    <div class="card-body p-5">
                        <!-- Receipt Info -->
                        <div class="row mb-4">
                            <div class="col-6">
                                <p class="text-muted text-uppercase small mb-1 fw-bold">Numéro de reçu</p>
                                <h5 class="fw-bold text-dark">#{{ "%06d"|format(payment.id) }}</h5>
                            </div>
                            <div class="col-6 text-end">
                                <p class="text-muted text-uppercase small mb-1 fw-bold">Date de paiement</p>
                                <h5 class="fw-bold text-dark">{{ payment.datePaiement|date('d/m/Y') }}</h5>
                            </div>
                        </div>

                        <hr class="my-4" style="border-top: 2px dashed #dee2e6;">

                        <!-- User Info -->
                        <div class="row mb-4">
                            <div class="col-12">
                                <p class="text-muted text-uppercase small mb-1 fw-bold">Reçu de</p>
                                <h4 class="fw-bold mb-0 text-primary">{{ payment.membre.name }}</h4>
                                <p class="text-muted mb-0">{{ payment.membre.email }}</p>
                            </div>
                        </div>

                        <!-- Details Table -->
                        <div class="bg-light rounded p-4 mb-4">
                            <table class="table table-borderless mb-0">
                                <tbody>
                                    <tr>
                                        <td class="text-muted ps-0">Motif du paiement</td>
                                        <td class="text-end fw-bold pe-0">{{ payment.motif }}</td>
                                    </tr>
                                    <tr>
                                        <td class="text-muted ps-0">Mode de paiement</td>
                                        <td class="text-end fw-bold pe-0">Virement / Espèces</td>
                                    </tr>
                                    <tr>
                                        <td class="text-muted ps-0 py-3">Statut</td>
                                        <td class="text-end py-3 pe-0">
                                            {% if payment.statut == 'payé' %}
                                                <span class="badge bg-success px-3 py-2 rounded-pill">PAYÉ</span>
                                            {% elseif payment.statut == 'en_attente' %}
                                                <span class="badge bg-warning text-dark px-3 py-2 rounded-pill">EN ATTENTE</span>
                                            {% else %}
                                                <span class="badge bg-danger px-3 py-2 rounded-pill">ANNULÉ</span>
                                            {% endif %}
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>

                        <hr class="my-4">

                        <!-- Total -->
                        <div class="d-flex justify-content-between align-items-center">
                            <h4 class="mb-0 text-muted fw-bold">TOTAL PAYÉ</h4>
                            <h1 class="mb-0 text-primary fw-bold">{{ payment.montant|number_format(2, ',', ' ') }} €</h1>
                        </div>
                    </div>

                    <!-- Footer -->
                    <div class="card-footer bg-light text-center py-4">
                        <p class="mb-1 fw-bold text-dark">Merci pour votre confiance !</p>
                        <p class="text-muted small mb-0">G.C.S FC - Club de Football | admin@gcs.com</p>
                    </div>
                </div>
            </div>
        </div>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    </body>
</html>
