{% extends 'base.html.twig' %}

{% block title %}Gestion des Membres - G.C.S FC{% endblock %}

{% block body %}
<div class="row mb-3">
    <div class="col-md-6">
        <h1>Gestion des Membres</h1>
    </div>
    <div class="col-md-6 text-end">
        <a href="{{ path('app_admin_index') }}" class="btn btn-white text-primary border-primary me-2">
            <i class="fa fa-backward"></i> Retour
        </a>
        <a href="{{ path('app_admin_member_add') }}" class="btn btn-primary">
            <i class="fa fa-plus"></i> Ajouter un membre
        </a>
    </div>
</div>

<div class="card shadow-sm">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped table-hover align-middle">
                <thead class="table-dark">
                    <tr>
                        <th style="width: 15%">NOM</th>
                        <th style="width: 20%">EMAIL</th>
                        <th style="width: 15%">RÔLE</th>
                        <th style="width: 10%">STATUT</th>
                        <th style="width: 15%">INSCRIT LE</th>
                        <th style="width: 25%">ACTIONS</th>
                    </tr>
                </thead>
                <tbody>
                    {% for membre in members %}
                        {% set user = membre.user %}
                        <tr>
                            <td><div class="fw-bold">{{ user.name }}</div></td>
                            <td><span class="text-muted">{{ user.email }}</span></td>
                            <td>
                                {% if 'ROLE_ADMIN' in user.roles %}
                                    <span class="badge bg-danger">Admin</span>
                                {% elseif 'ROLE_COACH' in user.roles %}
                                    <span class="badge bg-warning text-dark">Coach</span>
                                {% elseif 'ROLE_TREASURER' in user.roles %}
                                    <span class="badge bg-info text-dark">Trésorier</span>
                                {% else %}
                                    <span class="badge bg-secondary">Membre</span>
                                {% endif %}
                            </td>
                            <td>
                                {% if membre.statut == 'actif' %}
                                    <span class="badge bg-success">Actif</span>
                                {% else %}
                                    <span class="badge bg-secondary">Inactif</span>
                                {% endif %}
                            </td>
                            <td>{{ user.createdAt|date('d/m/Y') }}</td>
                            <td>
                                <div class="d-flex gap-2 align-items-center">
                                    <a href="#" class="btn btn-sm btn-info text-white px-3 fw-bold" style="background-color: #00BAE1; border: none;">
                                        Voir
                                    </a>
                                    <a href="{{ path('app_admin_member_edit', {id: membre.id}) }}" class="btn btn-sm btn-dark px-3 fw-bold" style="background-color: #1A1D21; border: none;">
                                        Editer
                                    </a>
                                    <form action="{{ path('app_admin_member_delete', {id: membre.id}) }}" method="post" class="m-0" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce membre ?')">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ membre.id) }}">
                                        <button class="btn btn-sm btn-danger px-3 fw-bold" style="border: none;">
                                            Supprimer
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="5" class="text-center">Aucun membre trouvé.</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}
