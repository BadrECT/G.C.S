 {% extends 'base.html.twig' %}

{% block title %}Suivi Financier - G.C.S FC{% endblock %}

{% block body %}
<div class="row mb-3">
    <div class="col-md-6">
        <h1>Suivi Financier</h1>
    </div>
    <div class="col-md-6 text-end">
        <a href="{{ path('app_admin_payment_add') }}" class="btn btn-warning">
            <i class="fa fa-plus"></i> Enregistrer Paiement
        </a>
        <a href="{{ path('app_admin_index') }}" class="btn btn-light me-2">
            <i class="fa fa-backward"></i> Retour
        </a>
    </div>
</div>

<div class="card shadow-sm">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped table-hover align-middle">
                <thead class="table-dark">
                    <tr>
                        <th>Membre</th>
                        <th>Motif</th>
                        <th>Montant</th>
                        <th>Date</th>
                        <th>Statut</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for payment in payments %}
                        <tr>
                            <td>{{ payment.membre.name }}</td>
                            <td>{{ payment.motif }}</td>
                            <td><strong class="text-success">{{ payment.montant|number_format(2, ',', ' ') }} €</strong></td>
                            <td>{{ payment.datePaiement|date('d/m/Y') }}</td>
                            <td>
                                {% if payment.statut == 'payé' %}
                                    <span class="badge bg-success">Payé</span>
                                {% elseif payment.statut == 'en_attente' %}
                                    <span class="badge bg-warning text-dark">En attente</span>
                                {% else %}
                                    <span class="badge bg-danger">Annulé</span>
                                {% endif %}
                            </td>
                            <td>
                                <div class="btn-group gap-2">
                                    <a href="{{ path('app_admin_payment_receipt', {id: payment.id}) }}" class="btn btn-sm btn-info text-white px-3 fw-bold" title="Imprimer le reçu">
                                        <i class="fas fa-print"></i> Reçu
                                    </a>
                                    <a href="{{ path('app_admin_payment_edit', {id: payment.id}) }}" class="btn btn-sm btn-dark px-3 fw-bold">Modifier</a>
                                    <form action="{{ path('app_admin_payment_delete', {id: payment.id}) }}" method="post" class="m-0" onsubmit="return confirm('Êtes-vous sûr ?')">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ payment.id) }}">
                                        <button class="btn btn-sm btn-danger px-3 fw-bold">
                                            Supprimer
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="6" class="text-center">Aucun paiement enregistré.</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}
