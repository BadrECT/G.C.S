{% extends 'base.html.twig' %}

{% block title %}Inscription - FIFA{% endblock %}

{% block stylesheets %}
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;600;700&display=swap');

        :root {
            --glass: rgba(255, 255, 255, 0.15);
            --glass-border: rgba(255, 255, 255, 0.2);
            --primary: #4361ee;
            --accent: #4cc9f0;
        }

        body {
            background: radial-gradient(circle at top left, #1e293b, #0f172a);
            height: 100vh;
            margin: 0;
            font-family: 'Outfit', sans-serif;
            display: flex;
            align-items: center;
            justify-content: center;
            overflow: hidden;
            position: relative;
        }

        /* Abstract circles for background depth */
        .circle {
            position: absolute;
            border-radius: 50%;
            filter: blur(80px);
            z-index: 0;
            opacity: 0.5;
        }
        .circle-1 {
            width: 400px;
            height: 400px;
            background: var(--primary);
            top: -100px;
            right: -100px;
            animation: move 20s infinite alternate;
        }
        .circle-2 {
            width: 300px;
            height: 300px;
            background: var(--accent);
            bottom: -50px;
            left: -50px;
            animation: move 15s infinite alternate-reverse;
        }

        @keyframes move {
            from { transform: translate(0, 0); }
            to { transform: translate(100px, 100px); }
        }

        .login-wrapper {
            position: relative;
            z-index: 10;
            width: 100%;
            max-width: 500px;
            padding: 20px;
        }

        .glass-card {
            background: var(--glass);
            backdrop-filter: blur(20px);
            -webkit-backdrop-filter: blur(20px);
            border: 1px solid var(--glass-border);
            border-radius: 24px;
            padding: 3rem;
            box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.5);
            animation: slideUp 0.8s cubic-bezier(0.16, 1, 0.3, 1);
        }

        @keyframes slideUp {
            from { opacity: 0; transform: translateY(30px); }
            to { opacity: 1; transform: translateY(0); }
        }

        .brand-logo {
            text-align: center;
            margin-bottom: 2rem;
        }

        .brand-logo img {
            width: 60px;
            filter: drop-shadow(0 0 10px rgba(67, 97, 238, 0.5));
            border-radius: 50%;
        }

        .login-header {
            text-align: center;
            margin-bottom: 2.5rem;
        }

        .login-header h1 {
            color: #fff;
            font-weight: 700;
            font-size: 1.8rem;
            margin-bottom: 0.5rem;
            letter-spacing: -0.5px;
        }

        .login-header p {
            color: rgba(255, 255, 255, 0.6);
            font-size: 0.95rem;
        }

        .form-group {
            margin-bottom: 1.5rem;
        }

        .form-label {
            color: rgba(255, 255, 255, 0.8);
            font-size: 0.85rem;
            font-weight: 600;
            margin-bottom: 0.6rem;
            display: block;
            margin-left: 4px;
        }

        .input-control {
            width: 100%;
            background: rgba(255, 255, 255, 0.05);
            border: 1px solid var(--glass-border);
            border-radius: 12px;
            padding: 1rem 1.2rem;
            color: #fff;
            font-size: 1rem;
            transition: all 0.3s;
            outline: none;
        }

        .input-control:focus {
            background: rgba(255, 255, 255, 0.1);
            border-color: var(--accent);
            box-shadow: 0 0 0 4px rgba(76, 201, 240, 0.15);
        }

        .btn-submit {
            width: 100%;
            background: linear-gradient(135deg, var(--primary), var(--secondary-color));
            background: var(--primary);
            color: white;
            border: none;
            border-radius: 12px;
            padding: 1.1rem;
            font-size: 1rem;
            font-weight: 700;
            cursor: pointer;
            transition: all 0.3s;
            margin-top: 1rem;
            box-shadow: 0 10px 20px -5px rgba(67, 97, 238, 0.4);
        }

        .btn-submit:hover {
            transform: translateY(-2px);
            box-shadow: 0 15px 30px -5px rgba(67, 97, 238, 0.6);
            filter: brightness(1.1);
        }

        .footer-links {
            text-align: center;
            margin-top: 2rem;
            font-size: 0.9rem;
        }

        .footer-links a {
            color: var(--accent);
            text-decoration: none;
            font-weight: 600;
            transition: opacity 0.3s;
        }

        .footer-links a:hover {
            opacity: 0.8;
        }
        
        /* Custom Twig Form Errors */
        .form-error {
            color: #fca5a5;
            font-size: 0.85rem;
            margin-top: 0.5rem;
            display: block;
        }
        .form-error ul {
            list-style: none;
            padding: 0;
            margin: 0;
        }
    </style>
{% endblock %}

{% block navbar %}{% endblock %}

{% block main %}
    <div class="circle circle-1"></div>
    <div class="circle circle-2"></div>

    <div class="login-wrapper">
        <div class="glass-card">
            <div class="brand-logo">
                <img src="https://cdn-icons-png.flaticon.com/512/33/33736.png" alt="Logo">
            </div>

            <div class="login-header">
                <h1>Créer un compte</h1>
                <p>Rejoignez le G.C.S FC et vivez votre passion.</p>
            </div>

            {{ form_start(registrationForm) }}
                <div class="form-group">
                    {{ form_label(registrationForm.name, 'Nom complet', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(registrationForm.name, {'attr': {'class': 'input-control'}}) }}
                    <div class="form-error">
                        {{ form_errors(registrationForm.name) }}
                    </div>
                </div>

                <div class="form-group">
                    {{ form_label(registrationForm.email, 'Adresse email', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(registrationForm.email, {'attr': {'class': 'input-control'}}) }}
                    <div class="form-error">
                        {{ form_errors(registrationForm.email) }}
                    </div>
                </div>

                <div class="form-group">
                    {{ form_label(registrationForm.plainPassword, 'Mot de passe', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'input-control'}}) }}
                    <div class="form-error">
                        {{ form_errors(registrationForm.plainPassword) }}
                    </div>
                </div>

                <button type="submit" class="btn-submit">
                    <i class="fas fa-user-plus me-2"></i> S'inscrire
                </button>
            {{ form_end(registrationForm) }}

            <div class="footer-links">
                <span style="color: rgba(255,255,255,0.5)">Déjà licencié ?</span>
                <a href="{{ path('app_login') }}">Se connecter</a>
                <br>
                <a href="{{ path('app_home') }}" class="mt-2 d-inline-block text-white opacity-50 small">Retour à l'accueil</a>
            </div>
        </div>
    </div>
{% endblock %}

{% block body %}{% endblock %}
